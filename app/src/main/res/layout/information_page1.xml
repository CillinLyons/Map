<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#89abe3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Neighborhood Watch"
        android:id="@+id/Logo"
        android:textSize="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="#ffdd00"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neighborhood Information and Wall Markings"
        android:id="@+id/textViewPage1"
        android:textSize="30dp"
        android:gravity="center"
        android:paddingTop="50dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="145dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wall markings are signs used by criminals. A criminal writes these wall markings in chalk on walls indicating information about a property"
        android:id="@+id/textViewPage1.1"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textViewPage1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>