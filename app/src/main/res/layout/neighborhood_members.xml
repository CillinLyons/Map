<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registered Members in"
        android:id="@+id/textViewRegMembers"
        android:layout_centerHorizontal="true"
        android:textColor="#ffdd00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewRegGroup"
        android:textColor="#ffdd00"
        android:layout_below="@+id/textViewRegMembers"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:id="@+id/listViewDB"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewRegGroup"
        android:layout_alignParentBottom="true" />

</RelativeLayout>